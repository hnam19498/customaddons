<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_xero_form" model="ir.ui.view">
            <field name="name">xero.view.form</field>
            <field name="model">xero.store</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="store_xero_name"/>
                        <field name="shop_shopify_id"/>
                        <field name="status_connect"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_xero_tree" model="ir.ui.view">
            <field name="name">xero.tree</field>
            <field name="model">xero.store</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="store_xero_name"/>
                    <field name="shop_shopify_id"/>
                    <field name="status_connect"/>
                </tree>
            </field>
        </record>

        <record id="action_xero_odoo" model="ir.actions.act_window">
            <field name="name">Xero</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xero.store</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <a href="https://odoo.website/xero/check-connect">Connect</a>
            </field>
        </record>

        <menuitem id="menu_xero"
                  name="Xero"
                  parent="menu_shopify_root"
                  action="action_xero_odoo"
                  sequence="0"/>

    </data>
</odoo>