<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_xero_form" model="ir.ui.view">
            <field name="name">xero.view.form</field>
            <field name="model">xero.store</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="shop_shopify_id"/>
                        <field name="status_connect"/>
                    </group>
                    <button type="object" name="connect_xero">Connect</button>
                </form>
            </field>
        </record>

        <record id="view_xero_tree" model="ir.ui.view">
            <field name="name">xero.tree</field>
            <field name="model">xero.store</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="shop_shopify_id"/>
                    <field name="status_connect"/>
                </tree>
            </field>
        </record>

        <record id="action_xero_odoo" model="ir.actions.act_window">
            <field name="name">Xero</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xero.store</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_xero"
                  name="Xero"
                  parent="menu_shopify_root"
                  sequence="0"/>

        <menuitem id="menu_xero_connect"
                  name="Xero connect"
                  parent="menu_xero"
                  action="action_xero_odoo"
                  sequence="-10"/>


        <record id="view_store_app_tree" model="ir.ui.view">
            <field name="name">store.app.tree</field>
            <field name="model">xero.token</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="store_id"/>
                    <field name="app_id"/>
                    <field name="id_token"/>
                    <field name="access_token"/>
                    <field name="refresh_token"/>
                </tree>
            </field>
        </record>

        <record id="action_store_app" model="ir.actions.act_window">
            <field name="name">Store app infor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">xero.token</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_shop_app"
                  name="Store app infor"
                  action="action_store_app"
                  parent="menu_xero"
                  sequence="-9"/>

    </data>
</odoo>