<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="fetch_order_view_form_shopify" model="ir.ui.view">
            <field name="name">fetch.order.view.form.shopify</field>
            <field name="model">fetch.order</field>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <button>Search</button>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_fetch_order" model="ir.actions.act_window">
            <field name="name">Fetch order</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">fetch.order</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_fetch_order"
                  name="Fetch order"
                  action="action_fetch_order"
                  parent="menu_shopify_root"
                  sequence="0"/>

    </data>
</odoo>