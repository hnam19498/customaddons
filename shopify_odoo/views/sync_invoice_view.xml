<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sync_invoice_view_form" model="ir.ui.view">
            <field name="name">sync.invoice.view.form</field>
            <field name="model">sync.invoice</field>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <form>
                    <button type="object" name="sync_invoice">Sync invoice</button>
                    <button type="object" name="put_invoice">Put invoice</button>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="store_id"/>
                        <field name="shop_id"/>
                    </group>
                    <group>
                        <group>
                            <field name="xero_invoice_ids" nolabel="1">
                                <tree>
                                    <field name="invoice_id" string="ID"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="sync_invoice_view_tree" model="ir.ui.view">
            <field name="name">sync.invoice.view.tree</field>
            <field name="model">sync.invoice</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="store_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="action_sync_shopify" model="ir.actions.act_window">
            <field name="name">Sync invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sync.invoice</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_sync_shopify"
                  name="Sync invoice"
                  action="action_sync_shopify"
                  parent="menu_shopify_root"
                  sequence="0"/>


        <record id="sync_history_view_tree" model="ir.ui.view">
            <field name="name">sync.history.view.tree</field>
            <field name="model">sync.history</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="store_name"/>
                    <field name="type"/>
                    <field name="count"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="action_sync_history" model="ir.actions.act_window">
            <field name="name">Sync history</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sync.history</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_sync_history"
                  name="Sync history"
                  parent="menu_shopify_root"
                  action="action_sync_history"
                  sequence="0"/>

    </data>
</odoo>