<odoo>
    <data>
        <template id="chart_bundle">
            <head>
                <script src="https://code.jquery.com/jquery-3.6.2.js"></script>
                <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
            </head>
            <body>
                <canvas id="myChart"></canvas>
                <script>
data_analytic = <t t-raw="data"/>
const ctx = document.getElementById('myChart')
let list_date = []
let list_time = []
let list_money = []
for (let line of data_analytic) {
    list_date.push(line['date'])
    list_time.push(line['time'])
    list_money.push(line['price_reduce']/10)
}
new Chart(ctx, {
    data: {
        labels: list_date,
        datasets: [{
            label: 'Time',
            data: list_time,
            borderWidth: 1,
            type: "line"
        }, {
            label: "Price reduce x10",
            data: list_money,
            type: "line",
            borderWidth: 1
        }]},
})
                </script>
            </body>
        </template>

        <record id="view_bundle_analytic_form" model="ir.ui.view">
            <field name="name">bundle.analytic.view.form</field>
            <field name="model">bundle.analytic</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="bundle_id"/>
                        <field name="start_time"/>
                        <field name="end_time"/>
                        <button type="object" name="bundle_analytic">Bundle analytic</button>
                    </group>
                    <field name="count_bundle_database_ids" nolabel="1">
                        <tree>
                            <field name="bundle_id"/>
                            <field name="date"></field>
                            <field name="time"/>
                            <field name="price_reduce"/>
                        </tree>
                    </field>
                    <field name="html_iframe"/>
                </form>
            </field>
        </record>

        <record id="bundle_analytic_action" model="ir.actions.act_window">
            <field name="name">Bundle analytic</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bundle.analytic</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your first shopify shop!</p>
            </field>
        </record>

        <menuitem name="Bundle analytic"
                  id="menu_bundle_analytic"
                  sequence="10"
                  parent="menu_shopify_root"
                  action="bundle_analytic_action"/>

    </data>
</odoo>