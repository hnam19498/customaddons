<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_shopify_odoo_form" model="ir.ui.view">
            <field name="name">shopify.odoo.form</field>
            <field name="model">shop.shopify</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="currencyCode"/>
                        <field name="url"/>
                        <field name="country"/>
                        <field name="status"/>
                        <field name="shopify_owner"/>
                        <field name="password"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_shopify_odoo" model="ir.actions.act_window">
            <field name="name">Shopify infor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shop.shopify</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_shopify_root"
                  name="Shopify"
                  sequence="0"/>

        <menuitem id="shopify_menu"
                  name="Shopify menu"
                  parent="menu_shopify_root"
                  sequence="-10"/>

        <menuitem id="shopify_infor"
                  name="Shopify infor"
                  action="action_shopify_odoo"
                  parent="shopify_menu"
                  sequence="-10"/>


        <record id="view_shop_app_tree" model="ir.ui.view">
            <field name="name">shop.app.tree</field>
            <field name="model">shop.app.shopify</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="shopify_id"/>
                    <field name="app_id"/>
                    <field name="access_token"/>
                </tree>
            </field>
        </record>

        <record id="action_shop_app" model="ir.actions.act_window">
            <field name="name">Shop app infor</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shop.app.shopify</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="shop_app"
                  name="Shop app infor"
                  action="action_shop_app"
                  parent="shopify_menu"
                  sequence="-1"/>

    </data>
</odoo>