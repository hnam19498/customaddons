<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_bundle_tree" model="ir.ui.view">
        <field name="name">product.bundle.tree</field>
        <field name="model">product.bundle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user" string="SP shop"></field>
                <field name="priority" string="Priority"></field>
                <field name="title" string="Title"></field>
                <field name="start_time" string="Start date"></field>
                <field name="end_time" string="End date"></field>
                <field name="enable" string="Enable bundle"/>
            </tree>
        </field>
    </record>

    <record id="view_bundle_form" model="ir.ui.view">
        <field name="name">bundle.form</field>
        <field name="model">product.bundle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="enable" string="Enable bundle" widget="boolean_toggle"/>
                        <field name="user" string="SP shop"/>
                    </group>
                    <h1>General settings</h1>
                    <group>
                        <group>
                            <field name="title" string="Title"/>
                            <field name="description" string="Description"/>
                            <field name="indefinite_bundle" string="Indefinite bundle" widget="boolean_toggle"/>
                            <h3>Date range</h3>
                            <field name="start_time" string="From"/>
                            <field name="end_time" string="To"/>
                        </group>
                        <group>
                            <field name="priority" string="Priority"/>
                        </group>
                    </group>
                    <h1>Discount settings</h1>
                    <group>
                        <group>
                            <field name="type" string="Bundle type"/>
                            <field name="discount_rule" string="Discount rule"/>
                            <field name="discount_type" string="Discount type"/>
                            <field name="discount_value" string="Discount value"/>
                        </group>
                    </group>
                    <field name="product_ids"
                           attrs="{'invisible': ['|',('discount_type','!=','total_fix'),('type','!=','bundle')]}">
                        <tree>
                            <field name="name" string="Product"></field>
                            <field name="product_template_variant_value_ids" string="Product variant"/>
                            <field name="product_vendor" string="Product vendor"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bundle" model="ir.actions.act_window">
        <field name="name">Product bundle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.bundle</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first bundle!</p>
        </field>
    </record>

    <menuitem id="menu_product_bundle_root"
              name="Product bundle"
              action="action_bundle"
              sequence="0"/>

</odoo>