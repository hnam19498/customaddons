<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_product_bundle_tree" model="ir.ui.view">
        <field name="name">bundle.tree</field>
        <field name="model">product.bundle</field>
        <field name="arch" type="xml">
            <tree>
                <field name="user" string="SP shop"/>
                <field name="priority" string="Priority"/>
                <field name="title" string="Title"/>
                <field name="indefinite_bundle" string="Indefinite bundle" widget="boolean_toggle"/>
                <field name="start_time" string="Start date"/>
                <field name="end_time" string="End date"/>
                <field name="enable" string="Enable bundle" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_product_bundle_qty_form" model="ir.ui.view">
        <field name="name">product.bundle.qty.form</field>
        <field name="model">product.bundle.qty</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="is_add_range" string="Is add range"/>
                    <field name="qty_start" attrs="{'invisible':[('is_add_range','!=',True)]}" string="Quantity start"/>
                    <field name="qty" string="Quantity" attrs="{'invisible':[('is_add_range','=',True)]}"/>
                    <field name="qty_end" attrs="{'invisible':[('is_add_range','!=',True)]}" string="Quantity end"/>
                    <field name="discount_value" string="Discount value"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_bundle_form" model="ir.ui.view">
        <field name="name">bundle.form</field>
        <field name="model">product.bundle</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="enable" string="Enable bundle" widget="boolean_toggle"/>
                        <field name="user" string="SP shop"/>
                    </group>
                    <h1>General settings</h1>
                    <group>
                        <group>
                            <field name="title" string="Title"/>
                            <field name="description" string="Description"/>
                            <field name="indefinite_bundle" string="Indefinite bundle" widget="boolean_toggle"/>
                            <h3 attrs="{'invisible':[('indefinite_bundle','=',True)]}">Date range</h3>
                            <field name="start_time" string="From"
                                   attrs="{'invisible':[('indefinite_bundle','=',True)]}"/>
                            <field name="end_time" string="To" attrs="{'invisible':[('indefinite_bundle','=',True)]}"/>
                        </group>
                        <group>
                            <field name="priority" string="Priority"/>
                        </group>
                    </group>
                    <h1>Discount settings</h1>
                    <group>
                        <group>
                            <field name="type" string="Bundle type"/>
                            <field name="discount_rule" string="Discount rule"
                                   attrs="{'invisible':[('type','=','tier')]}"/>
                            <field name="discount_type" string="Discount type"
                                   attrs="{'invisible':[('type','=','tier')]}"/>
                            <field name="discount_value" string="Discount value"
                                   attrs="{'invisible':[('type','=','tier')]}"/>
                        </group>
                    </group>

                    <field name="bundle_to_qty_ids" attrs="{'invisible':[('type','!=','tier')]}">
                        <tree>
                            <field name="id" string="Option"/>
                            <field name="is_add_range" string=" " widget="boolean_toggle"/>
                            <field name="qty_start" string="Quantity start"
                                   attrs="{'invisible':[('is_add_range','=',False)]}"/>
                            <field name="qty" string="Quantity" attrs="{'invisible': [('is_add_range', '=', True)]}"/>
                            <field name="qty_end" string="Quantity end"
                                   attrs="{'invisible':[('is_add_range','=',False)]}"/>
                            <field name="discount_value" string="Discount value"/>
                        </tree>
                    </field>

                    <field name="bundle_tier_product_ids" attrs="{'invisible':[('type','!=','tier')]}">
                        <tree editable="top">
                            <field name="name" string="Product"/>
                            <field name="image_128" string="Image" widget="image"/>
                            <field name="product_bundle_variant" string="Product variant"/>
                            <field name="product_vendor" string="Product vendor"/>
                        </tree>
                    </field>

                    <field name="bundle_total_product_ids"
                           attrs="{'invisible':['|',('type','!=','bundle'),('discount_rule','!=','total')]}">
                        <tree editable="top">
                            <field name="name" string="Product"/>
                            <field name="image_128" string="Image" widget="image"/>
                            <field name="product_bundle_variant" string="Product variant"/>
                            <field name="product_vendor" string="Product vendor"/>
                            <field name="product_bundle_qty" string="Quantity"/>
                        </tree>
                    </field>

                    <field name="bundle_each_product_ids"
                           attrs="{'invisible':['|',('type','!=','bundle'),('discount_rule','!=','product')]}">
                        <tree editable="top">
                            <field name="name" string="Product"/>
                            <field name="image_128" string="Image" widget="image"/>
                            <field name="product_bundle_variant" string="Product variant"/>
                            <field name="product_vendor" string="Product vendor"/>
                            <field name="product_bundle_qty" string="Quantity"/>
                            <field name="discount_value" string="Discount"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_bundle" model="ir.actions.act_window">
        <field name="name">Product bundle</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.bundle</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first bundle!</p>
        </field>
    </record>

    <menuitem id="menu_product_bundle_root"
              name="Product bundle"
              action="action_bundle"
              sequence="0"/>

</odoo>