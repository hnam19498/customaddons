<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="shopify_view_form" model="ir.ui.view">
            <field name="name">shopify.view.form</field>
            <field name="model">shop.shopify</field>
            <field name="priority" eval="5"/>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="access_token"/>
                        <field name="url"/>
                        <field name="shopify_owner"/>
                        <field name="password"/>
                        <field name="is_update_script_tag"/>
                        <field name="is_update_ngrok"/>
                        <button type="object" name="fetch_product">Fetch product</button>
                    </group>
                </form>
            </field>
        </record>
        <record id="shopify_view_tree" model="ir.ui.view">
            <field name="name">shopify.view.tree</field>
            <field name="model">shop.shopify</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="access_token"/>
                    <field name="url"/>
                    <field name="shopify_owner"/>
                    <field name="password"/>
                    <field name="is_update_script_tag"/>
                    <field name="is_update_ngrok"/>
                </tree>
            </field>
        </record>
        <record id="action_fetch_shopify" model="ir.actions.act_window">
            <field name="name">Fetch shopify</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">shop.shopify</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_fetch_shopify"
                  name="Fetch shopify"
                  action="action_fetch_shopify"
                  parent="menu_instafeed_root"
                  sequence="1"/>
    </data>
</odoo>